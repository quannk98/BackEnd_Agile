<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-image: url('https://mdbootstrap.com/img/Photos/Others/images/76.jpg');
            background-size: cover;
            /* background-repeat: no-repeat; */
            display: flex;
            height: 100vh;
            margin: 0;
        }

        .search-container {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            margin-bottom: 40px;

        }

        .search-box {
            border-radius: 5px;
            width: 200px;
            height: 30px;
            padding-left: 10px;
            margin-right: 10px;
        }

        .search-button {
            background-color: white;
            font-weight: bold;
            color: black;
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            margin-right: 10px;
            cursor: pointer;

        }

        .button-clicked {
            background-color: green !important;

            color: white !important;
        }

        .table th,
        .table td {
            text-align: center;
            vertical-align: middle;
        }
    </style>

</head>

<body>
    <%- include('../Screen/Navbar.ejs') -%>
        <div class="container container mt-5 pt-5">
            <div class="search-container">
                <input type="text" class="search-box" id="searchInput" placeholder="Search name product...">
                <button class="search-button" type="button" onclick="searchByName()">Search</button>
            </div>
            <h2 class="pagination justify-content-center mb-5 ">LIST PRODUCTS</h2>
            <table class="table table-striped" style="text-align: center;">
                <thead class="table-success">
                    <tr>
                        <th>ID Product</th>
                        <th>Name Product</th>
                        <th>Price</th>
                        <th>Color</th>
                        <th>Product Type</th>
                        <th>Quantity</th>
                        <th>Image Product</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody id="productTableBody">

                    <% products.forEach((product, index)=> { %>
                        <tr>
                            <td>
                                <%= product._id %>
                            </td>
                            <td>
                                <%= product.name %>
                            </td>
                            <td>
                                <%= product.price %>$
                            </td>
                            <td>
                                <%= product.color %>
                            </td>
                            <td>
                                <%= product.type %>
                            </td>
                            <td>
                                <%= product.quantity %>
                            </td>
                            <td>

                                <img src="/Image/<%= product.images[0] %>"
                                    style="max-width: 100px; max-height: 100px; border-radius: 10px; margin-right: 5px;">
                                <img src="/Image/<%= product.images[1] %>"
                                    style="max-width: 100px; max-height: 100px; border-radius: 10px;margin-top: 5px;">
                            </td>
                            <td><i class="fas fa-edit" onclick="editProduct('<%= product._id %>')"></i></td>
                            <td><i class="fas fa-trash-alt" onclick="confirmDelete('<%= product._id %>')"></i></td>
                        </tr>

                        <% }); %>


                </tbody>

            </table>
        </div>
        <script>

            function editProduct(id) {

                window.location.href = "/editproduct/" + id;
            }

            function confirmDelete(id) {

                if (confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?')) {

                    fetch('/deleteProduct/' + id, {
                        method: 'DELETE'
                    })
                        .then(response => response.json())
                        .then(result => {

                            console.log(result);

                            location.reload();
                        })
                        .catch(error => console.error('Error deleting product:', error));
                }
            }
            function searchByName() {
                var searchButton = document.querySelector('.search-button');
                searchButton.classList.add('button-clicked');
                setTimeout(function () {
                    searchButton.classList.remove('button-clicked');
                }, 100);

                var searchInput = document.getElementById('searchInput');
                var searchTerm = searchInput.value.trim();

                fetch('/searchProductByName', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ name: searchTerm }),
                })
                    .then(response => response.json())
                    .then(products => {

                        var tbody = document.getElementById('productTableBody');


                        tbody.innerHTML = "";


                        products.forEach(product => {
                            var row = `<tr>
                                <td>${product._id}</td>
                                <td>${product.name}</td>
                                <td>${product.price}$</td>
                                <td>${product.color}</td>
                                <td>${product.type}</td>
                                <td>${product.quantity}</td>
                                <td><img src="/Image/${product.images}" alt="Hình ảnh sản phẩm" style="max-width: 100px; max-height: 100px; border-radius: 10px;"></td>
                                <td><i class="fas fa-edit" onclick="editProduct('${product._id}')"></i></td>
                                <td><i class="fas fa-trash-alt" onclick="confirmDelete('${product._id}')"></i></td>
                            </tr>`;


                            tbody.innerHTML += row;
                        });
                    })
                    .catch(error => console.error('Error searching for products:', error));
            }

        </script>
</body>

</html>